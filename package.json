    "globby": "^14.0.2",
    "prettier": "^3.4.2",
    "progress-estimator": "^0.3.1",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/semver": "^7.7.0",
